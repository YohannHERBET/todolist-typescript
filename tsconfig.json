{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "watch": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "src/tests/*.test.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
